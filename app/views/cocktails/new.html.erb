<h2>Create a new Cocktail</h2>

<%= simple_form_for @cocktail do |f| %>
  <div class="form-inputs">
    <%= f.input :name %>
  </div>
  <div class="form-actions">
    <%= f.submit "Add a cocktail Mr.Drunk", class: "btn btn-primary" %>
    <%= link_to 'Cancel', @cocktail, class: "btn btn-outline-secondary" %>
  </div>
<% end %>
